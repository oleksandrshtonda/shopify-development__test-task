{{ 'collection.css' | asset_url | stylesheet_tag }}

<div class="featured-products">
  <h1 class="featured-products__label">
    Featured Products
  </h1>

  <div class="featured-products__products products">
    {% for product in products reverse %}
      <div class="products__product product">
        <img
          class="product__image"
          src="{{ product.featured_image | image_url }}"
          alt="{{ product.featured_image.alt | escape }}"
        >

        <div class="product__info">
          <p class="product__title">
            {{ product.title }}
          </p>
  
          <button class="product__add-to-cart-btn">
            Add to cart - {{ product.price | money_without_trailing_zeros }}
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

